generator client {
  provider =  "prisma-client-js"
}

datasource db {
  provider =  "sqlite"
  url      =  env("DATABASE_URL")
}

model Curator {
  id          Int      @id @default(autoincrement())
  name        String
  alias       String   @unique
  url         String   @unique
  totalMovies Int
  movies  Movie[]
}

model Movie {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  curatorId   Int
  curator     Curator  @relation(fields: [curatorId], references: [id])
}
